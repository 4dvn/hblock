{
  "hosting": {
    "public": "dist",
    "headers": [{
      "source": "**",
      "headers": [{
        "key": "Content-Security-Policy",
        "value": "default-src 'none'; style-src 'unsafe-inline'; img-src data:;"
      }, {
        "key": "X-XSS-Protection",
        "value": "1;mode=block"
      }, {
        "key": "X-Frame-Options",
        "value": "SAMEORIGIN"
      }]
    }, {
      "source": "**/@(*.txt|hosts)",
      "headers": [{
        "key": "Content-Type",
        "value": "text/plain; charset=utf-8"
      }]
    }, {
      "source": "**/*.zip",
      "headers": [{
        "key": "Content-Type",
        "value": "application/zip"
      }]
    }, {
      "source": "**/*.gz",
      "headers": [{
        "key": "Content-Type",
        "value": "application/gzip"
      }]
    }]
  }
}
